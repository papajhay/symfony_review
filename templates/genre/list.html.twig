{% extends 'layouts/base.html.twig' %}

{% block title %}Genres{% endblock %}

{% block body %}
    {% include 'layouts/partials/_navbar.html.twig' %}

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {# En-tête avec  bouton Nouveau #}
        <div class="flex justify-end mb-8">
            <a href="{{ path('genre_new') }}"
               class="inline-flex items-center px-5 py-2.5 bg-indigo-600 text-white font-medium rounded-lg shadow hover:bg-indigo-700 transition duration-200">
                <i class="fa-solid fa-plus w-5 h-5 mr-2"></i>
                Nouveau genre
            </a>
        </div>

        {# Tableau des genres #}
        <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-200">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Nom</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">CreatedBy</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Description</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider w-64 min-w-[180px] whitespace-nowrap">Actions</th>
                    </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 ">
                    {% for genre in genres %}
                        <tr class="hover:bg-gray-50 transition duration-150">
                            <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">
                                {{ genre.name }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">
                                {#  Si l'utilisateur a un username → affiche le username #}
                                {{ genre.createdBy ? genre.createdBy.username ?? genre.createdBy.email : '—' }}
                            </td>
                            <td class="px-6 py-4 text-gray-600 max-w-prose break-words hyphens-auto">
                                {{ genre.description|length > 120 ? genre.description|slice(0, 120) ~ '...' : genre.description ?: '—' }}
                            </td>
                            <td class="px-6 py-4 text-sm">
                                <div class="flex items-center space-x-4">
                                    {# Détails #}
                                    <a href="{{ path('genre_show', {id: genre.id}) }}"
                                       class="text-indigo-600 hover:text-indigo-800 font-medium flex items-center transition duration-150">
                                        <i class="fa-solid fa-eye w-4 h-4 mr-1.5"></i>
                                        Détails
                                    </a>

                                    {# Modifier #}
                                    {% if is_granted('genre.edit', genre) %}
                                        <a href="{{ path('genre_edit', {id: genre.id}) }}"
                                           class="text-amber-600 hover:text-amber-800 font-medium flex items-center transition duration-150">
                                            <i class="fa-solid fa-pen-to-square w-4 h-4 mr-1.5"></i>
                                            Modifier
                                        </a>
                                    {% endif %}

                                    {# Supprimer #}
                                    {% if is_granted('genre.delete', genre) %}
                                        {{ include('genre/_delete_form.html.twig') }}
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="px-6 py-16 text-center text-gray-500 italic bg-gray-50">
                                Aucun genre enregistré pour le moment
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# Pagination manuelle #}
        <div class="mt-6 flex justify-center space-x-2">
            {% if currentPage > 1 %}
                <a href="{{ path('genre_index', {'page': currentPage - 1}) }}"
                   class="px-3 py-1 bg-gray-200 rounded hover:bg-gray-300">&laquo; Précédent</a>
            {% endif %}

            {% for i in 1..totalPages %}
                <a href="{{ path('genre_index', {'page': i}) }}"
                   class="px-3 py-1 rounded {{ i == currentPage ? 'bg-indigo-600 text-white' : 'bg-gray-200 hover:bg-gray-300' }}">
                    {{ i }}
                </a>
            {% endfor %}

            {% if currentPage < totalPages %}
                <a href="{{ path('genre_index', {'page': currentPage + 1}) }}"
                   class="px-3 py-1 bg-gray-200 rounded hover:bg-gray-300">Suivant &raquo;</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
