{% extends 'layouts/base.html.twig' %}

{% block title %}Genre : {{ genre.name }}{% endblock %}

{% block body %}
    {% include 'layouts/partials/_navbar.html.twig' %}

    <div class="max-w-3xl mx-auto">
        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-6 p-4 rounded-lg {% if label == 'success' %}bg-green-100 text-green-800 border-l-4 border-green-500{% elseif label == 'error' %}bg-red-100 text-red-800 border-l-4 border-red-500{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Card principale #}
        <div class="mt-20 bg-white shadow-xl rounded-xl overflow-hidden border border-gray-200">

            {# En-tête de la card #}
            <div class="bg-gradient-to-r from-indigo-600 to-indigo-800 px-8 py-6 text-white">
                <h1 class="text-3xl font-bold">{{ genre.name }}</h1>
                {% if genre.createdBy %}
                    <p class="mt-2 opacity-90 text-sm">
                        Créé par <strong>{{ genre.createdBy.username ?? genre.createdBy.email }}</strong>
                    </p>
                {% endif %}
            </div>

            {# Contenu principal #}
            <div class="p-8">
                <div class="space-y-6">

                    {# Description #}
                    <div>
                        <h2 class="text-xl font-semibold text-gray-800 mb-3">Description</h2>
                        <div class="prose prose-indigo max-w-none">
                            {{ genre.description ?: '<p class="text-gray-500 italic">Aucune description pour ce genre pour le moment.</p>'|raw }}
                        </div>
                    </div>

                    {# Boutons d’action #}
                    <div class="flex flex-wrap gap-4 pt-6 border-t border-gray-200">

                        {# Bouton Retour #}
                        <a href="{{ path('genre_index') }}"
                           class="inline-flex items-center px-6 py-3 bg-gray-200 text-gray-800 font-medium rounded-lg hover:bg-gray-300 transition">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                            </svg>
                            Retour à la liste
                        </a>

                        {# Bouton Modifier #}
                        {% if is_granted('genre.edit', genre) %}
                            <a href="{{ path('genre_edit', {id: genre.id}) }}"
                               class="inline-flex items-center px-6 py-3 bg-amber-100 text-amber-800 font-medium rounded-lg hover:bg-amber-200 transition">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                </svg>
                                Modifier
                            </a>
                        {% endif %}

                        {# Bouton Supprimer + Modal #}
                        {% if is_granted('genre.delete', genre) %}
                            <!-- Bouton déclencheur du modal -->
                            <button
                                type="button"
                                data-modal-target="delete-modal-{{ genre.id }}"
                                data-modal-toggle="delete-modal-{{ genre.id }}"
                                class="inline-flex items-center px-5 py-2.5 bg-red-50 hover:bg-red-100 text-red-700 hover:text-red-800 font-medium rounded-lg border border-red-200 transition duration-200 shadow-sm">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                                Supprimer
                            </button>

                            <!-- Le modal de confirmation -->
                            <div id="delete-modal-{{ genre.id }}" tabindex="-1" aria-hidden="true"
                                 class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
                                <div class="relative p-4 w-full max-w-md max-h-full">
                                    <!-- Modal content -->
                                    <div class="relative bg-white rounded-2xl shadow-2xl border border-gray-200">

                                        <!-- Header -->
                                        <div class="flex items-center justify-between p-5 border-b border-gray-200 rounded-t-2xl bg-gradient-to-r from-red-50 to-red-100">
                                            <h3 class="text-xl font-bold text-red-800">
                                                Confirmer la suppression
                                            </h3>
                                            <button type="button"
                                                    class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center transition"
                                                    data-modal-hide="delete-modal-{{ genre.id }}">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                                </svg>
                                                <span class="sr-only">Fermer</span>
                                            </button>
                                        </div>

                                        <!-- Body -->
                                        <div class="p-6 space-y-4">
                                            <p class="text-base leading-relaxed text-gray-700">
                                                Êtes-vous sûr de vouloir supprimer le genre
                                                <span class="font-semibold text-gray-900">{{ genre.name }}</span> ?
                                            </p>
                                            <p class="text-sm text-red-600 font-medium bg-red-50 p-4 rounded-lg border border-red-200">
                                                Cette action est <strong>irréversible</strong> et supprimera définitivement ce genre de la base de données.
                                            </p>
                                        </div>

                                        <!-- Footer -->
                                        <div class="flex items-center justify-end p-6 space-x-4 border-t border-gray-200 bg-gray-50 rounded-b-2xl">
                                            <button
                                                data-modal-hide="delete-modal-{{ genre.id }}"
                                                type="button"
                                                class="px-6 py-2.5 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-lg transition duration-200">
                                                Annuler
                                            </button>

                                            <form method="post" action="{{ path('genre_delete', {id: genre.id}) }}" class="inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ genre.id) }}">
                                                <button type="submit"
                                                        class="px-6 py-2.5 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition duration-200 shadow-sm">
                                                    Oui, supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
