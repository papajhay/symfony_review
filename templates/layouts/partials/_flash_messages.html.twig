<div class="pt-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {% set flash_classes = {
        'success': 'bg-green-50 text-green-800 border-green-500',
        'error': 'bg-red-50 text-red-800 border-red-500',
        'danger': 'bg-red-50 text-red-800 border-red-500',
        'warning': 'bg-yellow-50 text-yellow-800 border-yellow-500',
        'info': 'bg-blue-50 text-blue-800 border-blue-500',
        'notice': 'bg-blue-50 text-blue-800 border-blue-500'
    } %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message relative mb-6 p-4 rounded-lg shadow-md border-l-4 transition-all duration-300 {{ flash_classes[label]|default('') }}" role="alert">
                {# Croix de fermeture #}
                <button type="button"
                        onclick="this.parentElement.style.opacity='0'; setTimeout(() => this.parentElement.remove(), 300);"
                        class="absolute top-2 right-3 text-gray-500 hover:text-gray-700 transition duration-150">
                    <i class="fa-solid fa-times text-lg"></i>
                </button>

                <span class="font-medium block pr-8">{{ message }}</span>
            </div>
        {% endfor %}
    {% endfor %}
</div>
